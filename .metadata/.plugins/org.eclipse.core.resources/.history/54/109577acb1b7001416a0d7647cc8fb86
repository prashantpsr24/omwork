package lab3;

Complex module Node
{
    parameters:
        int address;
    
    gates:
        input in0;
        output out0;
    submodules:
        applayer: Applayer {
            @display("p=52,75");
        }
        dllayer: Dllayer {
            @display("p=176,75");
        }
        phlayer: Phlayer {
            @display("p=307,75");
        }
    connections:
        applayer.out0 --> dllayer.in0;
        dllayer.out0 --> applayer.in0;
        dllayer.out1 --> phlayer.in0;
        phlayer.out0 --> dllayer.in1;
        phlayer.out1 --> out0;
        in0 --> phlayer.in1;
}
